<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/blueMightBluePickledBluewood"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/story_title"
        android:layout_width="204dp"
        android:layout_marginLeft="40dip"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@+id/story_status"
        android:paddingBottom="1sp"
        android:paddingTop="4sp"
        android:textColor="@color/organeRedPeachWheat"
        android:textSize="22sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/story_status"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/story_title"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:paddingBottom="4sp"
        android:paddingLeft="5sp"
        android:paddingTop="1sp"
        android:textSize="22sp"
        android:textStyle="italic" />

</RelativeLayout>